<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/movies_list_item_port"
    android:padding="@dimen/movies_list_item_rl_padding">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageViewMoviePoster" />

    <TextView
        android:text="Captain America: Civil War"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageViewMoviePoster"
        android:layout_toRightOf="@+id/imageViewMoviePoster"
        android:layout_toEndOf="@+id/imageViewMoviePoster"
        android:id="@+id/textViewMovieTitle"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewMovieTitle"
        android:layout_toRightOf="@+id/imageViewMoviePoster"
        android:layout_alignLeft="@+id/textViewMovieTitle"
        android:layout_alignStart="@+id/textViewMovieTitle"
        android:id="@+id/textViewMovieOverview" />
</RelativeLayout>